<div class="center">
  <h1>History</h1>
</div>
<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Number of tests</th>
      <th scope="col">Subject</th>
      <th scope="col">Duration</th>
      <th scope="col">Question number</th>
      <th scope="col">Score</th>
      <th scope="col">#</th>
    </tr>
  </thead>
    <% i = 0 %>
    <% @user.user_tests.each do |user_test| %>
    <% i += 1 %>
    <tbody>
      <tr>
        <td><%= i %></td>
        <% user_test.lessons.each do |lesson| %>
          <td><%= lesson.title %></td>
          <td>20</td>
          <td><%= lesson.questions.count%></td>
          <% break %>
        <% end %>
        <td><%= user_test.result %></td>
        <td><button>Detail</button></td>
      </tr>
    </tbody>
    <% end %>
  </table>
<div class="center">
  <%= link_to t(".back"), root_path, class: "btn btn-info" %>
</div>
