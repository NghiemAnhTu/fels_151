<tr>
  <td><%= question.id %></td>
  <td><%= question.lesson.id %></td>
  <td><%= question.content %></td>
  <td><%= I18n.localize question.created_at, formats: :date_month_year %></td>
  <td><%= question.category %></td>
  <td><%= question.answers.size %></td>
  <td>
    <%= link_to edit_admin_question_path(question.id),
      class: "btn-edit-category btn btn-warning" do %>
        <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_question_path(question.id), method: :delete,
      data:{confirm: t(".sure"), remote: true}, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
