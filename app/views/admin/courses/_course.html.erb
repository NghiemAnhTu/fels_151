<tr>
  <td><%= course.id %></td>
  <td><%= course.title %></td>
  <td><%= course.content %></td>
  <td><%= course.description %></td>
  <td><%= I18n.localize course.created_at, formats: :date_month_year %></td>
  <td>
    <%= link_to edit_admin_course_path(course.id),
      data: {toggle: "modal", target: "#form-edit-course"}, remote: true,
        class: "btn btn-warning" do %>
      <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to  admin_course_path(course.id), method: :delete,
      data:{confirm: t(".sure"), remote: true}, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
