<% provide :title, t(".title") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @lesson] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :select %>
        <%= f.select :course_id, options_from_collection_for_select(@courses,
          :id, :title, params[:course_id]), title: "lesson[course_id]",
          class: "form-control" %>
      </div>
      <%= f.submit t(".save"), class: "btn btn-primary" %>
    <% end %>
    <br><%= link_to t(".back"), admin_lessons_path %></br>
  </div>
</div>
