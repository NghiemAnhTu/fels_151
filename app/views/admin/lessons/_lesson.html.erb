<tr>
  <td><%= lesson.id %></td>
  <td><%= lesson.course_id %></td>
  <td><%= lesson.title %></td>
  <td><%= I18n.localize lesson.created_at, formats: :date_month_year %></td>
  <td><%= lesson.questions.size %></td>
  <td>
    <%= link_to edit_admin_lesson_path(lesson.id),
      class: "btn-edit-category btn btn-warning" do %>
        <span class="glyphicon glyphicon-edit"></span>
    <% end %>
  </td>
  <td>
    <%= link_to admin_lesson_path(lesson.id), method: :delete,
      data:{confirm: t(".sure"), remote: true}, class: "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
</tr>
