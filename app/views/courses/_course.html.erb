<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="course_image">
        <%= link_to image_tag(course.picture.url), course_path(course.id) %>
      </div>
    </div>
    <div class="col-md-10">
      <h4><%= label_tag course.title %></h4>
      <%= course.description %>
    </div>
  </div>
</div>
